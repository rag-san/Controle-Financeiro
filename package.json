{
  "name": "controle-financeiro-next",
  "private": true,
  "version": "1.1.0",
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "dev:webpack": "next dev",
    "reset:data": "node --env-file=.env --import tsx scripts/reset-data.ts",
    "reset:data:full": "node --env-file=.env --import tsx scripts/reset-data.ts --full",
    "reset:data:hard": "node --env-file=.env --import tsx scripts/reset-data.ts --full --purge-config",
    "seed": "node --env-file=.env --import tsx scripts/seed.ts",
    "validate": "node --env-file=.env --import tsx scripts/validate-backend-flow.ts",
    "cleanup:test-users": "node --env-file=.env --import tsx scripts/cleanup-test-users.ts",
    "db:health": "node --env-file=.env --import tsx scripts/db-health-check.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node --env-file=.env --import tsx --test tests/unit/**/*.test.ts",
    "test:migration": "node --import tsx --test tests/unit/topbar-controls-ui-lock.test.ts tests/unit/mobile-responsiveness-guards.test.ts tests/unit/migration-rollout.test.ts",
    "test:integration": "node --env-file=.env --test tests/integration/api-flow.test.mjs",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint",
    "build": "next build --no-lint",
    "build:full": "npm run verify && next build --no-lint",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "next": "^15.1.3",
    "next-auth": "^4.24.11",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^5.4.624",
    "pg": "^8.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.7.0",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.1.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
